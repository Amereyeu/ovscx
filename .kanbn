
/* column headers */
.kanbn-column-name {
  font-size: 0.8rem;
}

/* card */
.kanbn-task {
  border-left: 4px solid #fbfbfb;
  color: #fbfbfb;
  padding: 4px 4px 8px 8px;
}

/* items in card */
.kanbn-task-data-created,
.kanbn-task-data-workload,
.kanbn-task-data-assigned {
  display: none;
}

.kanbn-task-data-name button {
  color: #fbfbfb;
  font-size: 1.1rem;
  font-style: italic;
}

.kanbn-task-tag {
  font-size: 0.9rem;
}

.kanbn-task-data-sub-tasks {
  font-size: 0.9rem;
  color: #fbfbfb;
}

.kanbn-task-tag-layout {
  background-color: #179fff;
  color: #efefef;
}

/* column border colors */
.kanbn-column-todo .kanbn-column-task-list {
  border-color: #bc1802;
}
.kanbn-column-in-progress .kanbn-column-task-list {
  border-color: #e83;
}
.kanbn-column-done .kanbn-column-task-list {
  border-color: #09f548;
}

/* buttons in columns */
.kanbn-column-button {
  color: #fbfbfb;
}

.kanbn-sort-column-button .codicon {
  opacity: 1;
}

/* card detail */
form {
  font-size: 1rem;
}

.kanbn-task-editor-field {
  margin-bottom: 1em;
  padding: 8px;
}

.kanbn-task-editor-field-checkbox,
.kanbn-task-editor-field-input,
.kanbn-task-editor-field-select,
.kanbn-task-editor-field-textarea,
.kanbn-task-editor-description-preview {
  border: 1px solid #686868;
}

.kanbn-task-editor-field.kanbn-task-editor-field-comments,
.kanbn-task-editor-field.kanbn-task-editor-field-relations,
.kanbn-task-editor-field.kanbn-task-editor-field-assigned,
.kanbn-task-editor-field.kanbn-task-editor-field-started,
.kanbn-task-editor-field.kanbn-task-editor-field-due,
.kanbn-task-editor-field.kanbn-task-editor-field-completed,
.kanbn-task-editor-id {
  display: none;
}
