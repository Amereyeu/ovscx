  },
  "border blue": {
    "prefix": "brb",
    "body": ["border: 1px solid blue;"],
    "description": "border blue - test"
  },
  "border green": {
    "prefix": "brg",
    "body": ["border: 1px solid green;"],
    "description": "border green - test"
  },
  "media queries": {
    "prefix": "mm",
    "description": "Media Queries selector",
    "body": [
      "@include break(${1|$medium,$large,$xlarge,$small|}) {",
      "  $0",
      "}",
      ""
    ]
  },
  "grid autofill": {
    "prefix": "gr-autofill",
    "description": "grid - autofill",
    "body": [
      "grid-template-columns: repeat(auto-fill, minmax(${1:200px}, 1fr));$0",
      ""
    ]
  },
  "grid autofit": {
    "prefix": "gr-autofit",
    "description": "grid - autofit",
    "body": [
      "grid-template-columns: repeat(auto-fit, minmax(${1:200px}, 1fr));$0",
      ""
    ]
  },
  "svg footer": {
    "prefix": "svg-footer",
    "description": "footer with svg",
    "body": [
      ".footer {",
      "  padding: 2rem;",
      "  display: flex;",
      "  flex-direction: column;",
      "  align-items: center;",
      "  background: \\$color-primary;",
      "",
      "  &__logo {",
      "    height: 100px;",
      "    margin: 0 auto;",
      "    fill: \\$color-secondary;",
      "  }",
      "",
      "  &__copyright p {",
      "    font-size: 0.9rem;",
      "    margin-top: 1rem;",
      "    text-align: center;",
      "  }",
      "}",
      ""
    ]
  },
  "fixed div": {
    "prefix": "fixed-div",
    "description": "Centered fixed div vertically and horizontally",
    "body": [
      "position: fixed;",
      "top: 50%;",
      "left: 50%;",
      "transform: translate(-50%, -50%);",
      ""
    ]
  },
  "comment": {
    "prefix": "comment",
    "description": "scss comment ",
    "body": [
      "// ",
      "// $1",
      "//",
      "$0",
      ""
    ]
  }
