{
  "Blog Header": {
    "prefix": "md-blog",
    "description": "Markdown Blog post header",
    "body": [
      "---",
      "title: ${TM_FILENAME_BASE/(-)|(\\w+)/${1:+ }${2:/capitalize}/g}",
      "pubDate: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}T00:00:00-07:00",
      "description: $1",
      "category: ${2|coding,macOS,design,tech,automation|}",
      "draft: ${3|false,true|}",
      "---",
      ""
    ]
  },
  "Inline Code": {
    "prefix": "md-inline",
    "description": "Markdown Inline Code",
    "body": [
      "`$0`"
    ]
  },

  "Block Code": {
    "prefix": "md-block",
    "body": [
      "```$1", 
        "$2", 
      "```"
    ],
    "description": "Markdown Blog Code"
  }
}

