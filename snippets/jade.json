{
  "pug switch": {
    "prefix": "pg-switch",
    "description": "pug switch case",
    "body": [
      "- let ${1:switch_name} = \"${2:case_one}\"",
      "",
      "case ${1:switch_name}",
      "  when \"${2:case_one}\"  ",
      "    include ${3:partial_one}",
      "  when \"${4:case_two}\"",
      "    include ${5:partial_two}",
      "$0",
      ""
    ]
  },
  "pug menu links": {
    "prefix": "pg-menu-links",
    "description": "menu links without diacritics ",
    "body": [
      "- const ${1:linkItems} = [\"$3\",\"$4\", \"$5\", \"$6\"]",
      "",
      "ul",
      "  each ${2:item}, i in ${1:linkItems} ",
      "    li",
      "      a(href=${2:item}.toLowerCase().normalize(\"NFD\").replace(/\\p{Diacritic}/gu, \"\").split(\" \").join(\"-\") + \".html\", class=\"nav-link\") #{ ${2:item} } ",
      "$0",
      ""
    ]
  },
  "pug list": {
    "prefix": "pg-list",
    "description": "list in pug ",
    "body": [
      "- const ${1:listItems} = [${3/([^|]+)|([|])/${1:+\\\"}$1${1:+\\\"}${2:+, }/g}]",
      "",
      "ul",
      "  each ${2:item}, i in ${1} ",
      "    li #{ ${2} } ",
      "$0",
      ""
    ]
  },
  "pug paragraph multiline": {
    "prefix": "pg-paragraph-multiline",
    "description": "pug paragraph multiline",
    "body": [
      "p ",
      "  | ${1:insert_text_here}",
      "$0",
      ""
    ]
  },
  "pug link": {
    "prefix": "pg-link",
    "description": "pug link",
    "body": [
      "a(href=\"${2:link_address}\", class=\"${3:class_name}\") ${1:link_name}",
      "$0",
      ""
    ]
  },
  "pug prepend": {
    "prefix": "pg-prepend",
    "description": "pug prepend",
    "body": [
      "prepend ${1:block_name} ",
      "  - let ${2:case_name} = \"${3:case_option}\"",
      "$0",
      ""
    ]
  },
  "pug block": {
    "prefix": "pg-block",
    "description": "pug block",
    "body": [
      "block ${1:block_name}",
      "  ${2:content}",
      "$0",
      ""
    ]
  },
  "pug list2": {
    "prefix": "pglst",
    "description": "pug list",
    "body": [
      "- const ${1:listItems} = [${3/([^|]+)|([|])/${1:+\"}$1${1:+\"}${2:+, }/g}]",
      "",
      "ul",
      "  each ${2:item}, i in ${1}",
      "    li #{ ${2} } ",
      "$0",
      ""
    ]
  },
}
