{
  "pug switch": {
    "prefix": "pg-switch",
    "description": "pug switch case",
    "body": [
      "- let ${1:switch_name} = \"${2:case_one}\"",
      "",
      "case ${1:switch_name}",
      "  when \"${2:case_one}\"  ",
      "    include ${3:partial_one}",
      "  when \"${4:case_two}\"",
      "    include ${5:partial_two}",
      "$0",
      ""
    ]
  },
  "pug menu links": {
    "prefix": "pg-menu-links",
    "description": "menu links without diacritics",
    "body": [
      "- const ${1:linkItems} = [${3/([^|]+)|([|])/${1:+\"}$1${1:+\"}${2:+, }/g}]",
      "",
      "ul",
      "  each ${2:item}, i in ${1} ",
      "    li",
      "      a(href=${2}.toLowerCase().normalize(\"NFD\").replace(/\\p{Diacritic}/gu, \"\").split(\" \").join(\"-\") + \".html\", class=\"nav-link\") #{ ${2} } ",
      "$0",
      ""
    ]
  },
  "pug paragraph multiline": {
    "prefix": "pg-paragraph-multiline",
    "description": "pug paragraph multiline",
    "body": [
      "p ",
      "  | ${1:insert_text_here}",
      "$0",
      ""
    ]
  },
  "pug link": {
    "prefix": "pg-link",
    "description": "pug link",
    "body": [
      "a(href=\"${2:link_address}\", class=\"${3:class_name}\") ${1:link_name}",
      "$0",
      ""
    ]
  },
  "pug prepend": {
    "prefix": "pg-prepend",
    "description": "pug prepend block",
    "body": [
      "prepend ${1:block_name} ",
      "  - let ${2:case_name} = \"${3:case_option}\"",
      "$0",
      ""
    ]
  },
  "pug block": {
    "prefix": "pg-block",
    "description": "pug block",
    "body": [
      "block ${1:block_name}",
      "  ${2:content}",
      "$0",
      ""
    ]
  },
  "pug list": {
    "prefix": "pg-list",
    "description": "pug list",
    "body": [
      "- const ${1:listItems} = [${3/([^|]+)|([|])/${1:+\"}$1${1:+\"}${2:+, }/g}]",
      "",
      "ul",
      "  each ${2:item}, i in ${1}",
      "    li #{ ${2} } ",
      "$0",
      ""
    ]
  },
  "pug include": {
    "prefix": "pg-include",
    "description": "pug include partial",
    "body": [
      "include ${1:path_to_partial}",
      ""
    ]
  },
  "pug extends": {
    "prefix": "pg-extends",
    "description": "pug extends template",
    "body": [
      "extends ${1:path_to_template}",
      ""
    ]
  },
  "pug image": {
    "prefix": "pg-image",
    "description": "pug image",
    "body": [
      "img(src=\"$1\" alt=\"$2\")",
      ""
    ]
  },
  "pug head section": {
    "prefix": "pg-head-section",
    "description": "pug head section",
    "body": [
      "head",
      "  meta(charset='utf-8')",
      "  meta(name='viewport' content=\"width=device-width, initial-scale=1\")",
      "  title $1",
      "  meta(name=\"description\" content=\"$2\")",
      "  meta(name=\"keyword\" content=\"$3\")",
      "  link(rel='icon' href='favicon.ico' type=\"image/x-icon\")",
      "  link(rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png')",
      "  link(rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png')",
      "  link(rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png')",
      "  link(rel='manifest' href='/site.webmanifest')",
      "  link(rel=\"stylesheet\" href=\"css/styles.css?cb=1312\")",
      "$0",
      ""
    ]
  }
}
